<!--pages/alarm/medicineInfo/medicineInfo.wxml-->
<view class="container">
  <view class="card" style="margin-top:0;">
    <text>药品信息</text>
    <view class="line1"></view>
    <view class="info">
      <text class="key">药品名称</text>
      <text class="value">{{alarmId}}</text>
    </view>
    <view class="line1"></view>
    <view class="info">
      <text class="key">每次服用量</text>
      <text class="value">鱼肝油</text>
    </view>
    <view class="line1"></view>
    <view class="info">
      <text class="key">使用病状</text>
      <text class="value">维生素AD缺乏</text>
    </view>
    <view class="line1"></view>
    <view class="info">
      <text class="med-name">详细信息</text>
      <image class="med-img" src="../../../images/alarm/medicine.png"></image>
    </view>
  </view>
  <form bindsubmit='done' report-submit='true'>
    <button class="done" form-type="submit">已服药</button>
  </form>
  <form bindsubmit='skip' report-submit='true'>
    <button class="goon" form-type="submit">跳过</button>
  </form>
</view>